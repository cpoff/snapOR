extends layout

block content
	div.contain-to-grid.sticky
		nav.top-bar(data-topbar="", role="navigation")
			ul.title-area
				li.name
					h1
						a(href='#') snapOR
				li.toggle-topbar.menu-icon
					a(href="#")
						span Menu
			section.top-bar-section
				ul.right
					li
						a(href='#', data-reveal-id="login") Login
							#login.reveal-modal(data-reveal='', aria-labelledby='modalTitle', aria-hidden='true', role='dialog')
								h2#modalTitle Login
								form(method="post" action="/login")
									label.label Email: 
									input(type="text" name="username" style="font-family: 'Lora'" placeholder="ex: user@domain.com")
									label.label Password: 
									input(type="password" name="password" style="font-family: 'Lora'" placeholder="password")
									br
									input.button(type="submit" style="font-family: 'Open Sans Condensed'" value="Login")
									br
									input.button(type="submit" style="font-family: 'Open Sans Condensed'" value="Reset Password")
							//a.close-reveal-modal(aria-label='Close') &times;
					li
						a(href='#', data-reveal-id='register') Register
							#register.reveal-modal(data-reveal='', aria-labelledby='modalTitle', aria-hidden='true', role='dialog')
								h2#modalTitle Register New Account
								form(method="post" action="/user")
									label.label Email (This will be your username): 
									input(type="text" name="email" style="font-family: 'Lora'" placeholder="user@example.com")
									label.label Password: 
									input(type="password" name="password" style="font-family: 'Lora'" placeholder="password")
									label.label Re-enter Password: 
									input(type="password" name="password_confirm" style="font-family: 'Lora'" placeholder="password confirmation")
									br
									input.button(type="submit" style="font-family: 'Open Sans Condensed'" value="Register account")
								//- a.close-reveal-modal(aria-label='Close') &#215;
				ul.left
					li
						#the-basics
							input(class="typeahead" type="text" name="Enter park name:" style="font-family: 'Lora'" placeholder="Ex: 'cape kiwanda', 'silver falls state park'")
					li.active
						a(href='#', data-reveal-id="photos") Discover Photos
							#photos.reveal-modal(data-reveal='', aria-labelledby='modalTitle', aria-hidden='true', role='dialog')
									h2#modalTitle Discover Photos
									form(method="post" action="/photos")
										input(type="text" name="Enter tags:" style="font-family: 'Lora'" placeholder="Ex: 'waterfalls', 'cape kiwanda'")
										br
										input(type="submit" value="Discover")
								//a.close-reveal-modal(aria-label='Close') &times;
					li.active
						a(href='#', data-reveal-id="parks") Explore Parks
							#parks.reveal-modal(data-reveal='', aria-labelledby='modalTitle', aria-hidden='true', role='dialog')
									h2#modalTitle Explore Parks
									form(method="post" action="/parks")
										#the-basics
											input(class="typeahead" type="text" name="Enter park name:" style="font-family: 'Lora'" placeholder="Ex: 'cape kiwanda', 'silver falls state park'")
										br
										input(type="submit" value="Explore")
								//a.close-reveal-modal(aria-label='Close') &times;
	div#map_canvas
	div#the-basics
		input.typeahead(type="text" placeholder="States of the USA")
		script.
			$(document).foundation();

